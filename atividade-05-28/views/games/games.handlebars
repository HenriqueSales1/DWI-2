<h1>Games</h1>
<form action="/games/{{#if action}}save{{else}}create{{/if}}" method="post">
    <input type="hidden" name="id" value="{{game_editing.id}}">

    <label for="titulo">Título</label>
    <br>
    <input type="text" name="titulo" id="titulo" value="{{game_editing.titulo}}" required>
    <br>

    <label for="num_conquistas">Número de conquistas</label>
    <br>
    <input type="number" name="num_conquistas" id="num_conquistas" value="{{game_editing.num_conquistas}}" required>
    <br>

    <label for="descricao">Descrição</label>
    <br>
    <textarea name="descricao" id="descricao" rows="4" cols="50" required>{{game_editing.descricao}}</textarea>
    <br>

    <label for="ano_lancamento">Ano</label>
    <br>
    <input type="number" name="ano_lancamento" id="ano_lancamento" value="{{game_editing.ano_lancamento}}" required>

    <button>
        {{#if action}} Editar {{else}} Salvar {{/if}}
    </button>
</form>
<hr>
<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Número de Conquistas</th>
            <th>Descrição</th>
            <th>Ano</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each games}}
        <tr>
            <td>{{this.titulo}}</td>
            <td>{{this.num_conquistas}}</td>
            <td>{{this.descricao}}</td>
            <td>{{this.ano_lancamento}}</td>
            <td style="display:flex; justify-content: space-evenly;">
                <form action="/games/edit" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">Editar</button>
                </form>
                <form action="/games/delete" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">Excluir</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>