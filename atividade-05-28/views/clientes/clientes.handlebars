<h1>Clientes</h1>
<form action="/clientes/{{#if action}}save{{else}}create{{/if}}" method="post">
    <input type="hidden" name="id" value="{{cliente_editing.id}}">

    <label for="nome">Nome</label>
    <br>
    <input type="text" name="nome" id="nome" value="{{cliente_editing.nome}}" required>
    <br>

    <label for="email">Email</label>
    <br>
    <input type="email" name="email" id="email" value="{{cliente_editing.email}}" required>
    <br>

    <label for="telefone">Telefone</label>
    <br>
    <input type="text" name="telefone" id="telefone" value="{{cliente_editing.telefone}}" required>
    <br>

    <label for="endereco">Endereço</label>
    <br>
    <textarea name="endereco" id="endereco" rows="4" cols="50" required>{{cliente_editing.endereco}}</textarea>
    <br>

    <label for="data_nascimento">Data de Nascimento</label>
    <br>
    <input type="date" name="data_nascimento" id="data_nascimento" value="{{cliente_editing.data_nascimento}}" required>
    <br>

    <button>
        {{#if action}} Editar {{else}} Salvar {{/if}}
    </button>
</form>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th>Data de Nascimento</th>
            <th>Ações</th>
        </tr>
        <tbody>
        {{#each clientes}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.nome}}</td>
                <td>{{this.email}}</td>
                <td>{{this.telefone}}</td>
                <td>{{this.endereco}}</td>
                <td>{{this.data_nascimento}}</td>
                <td style="display:flex; justify-content: space-evenly;">
                    <form action="/clientes/edit" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit">Editar</button>
                    </form>
                    <form action="/clientes/delete" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit">Excluir</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </thead>
</table>