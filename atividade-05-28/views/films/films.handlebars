<h1>Filmes</h1>
<form action="/films/{{#if action}}save{{else}}create{{/if}}" method="post">
    <input type="hidden" name="id" value="{{film_editing.id}}">

    <label for="titulo">Título</label><br>
    <input type="text" name="titulo" id="titulo" value="{{film_editing.titulo}}" required><br>

    <label for="descricao">Descrição</label>
    <br>
    <textarea name="descricao" id="descricao" rows="4" cols="50" required>{{film_editing.descricao}}</textarea><br>

    <label for="ano">Ano</label><br>
    <input type="number" name="ano" id="ano" value="{{film_editing.ano}}" required><br>

    <label for="ClienteId">Cliente</label><br>
    <input type="text" name="ClienteId" id="ClienteId" value="{{film_editing.ClienteId}}" required><br>

    <button>
        {{#if action}}Editar{{else}}Salvar{{/if}}
    </button>
</form>
<hr>
<table>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Descrição</th>
            <th>Ano</th>
            <th>Cliente</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each films}}
        <tr>
            <td>{{this.titulo}}</td>
            <td>{{this.descricao}}</td>
            <td>{{this.ano}}</td>
            <td>{{this.ClienteId}}</td>
            <td style="display:flex;
            justify-content: space-evenly;">
            <form action="/films/edit" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">Editar</button>
            </form>
            <form action="films/delete" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">Excluir</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>